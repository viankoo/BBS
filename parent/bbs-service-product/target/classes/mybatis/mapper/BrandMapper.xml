<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.babasport.mapper.BrandMapper">
	<!-- 条件查询所有品牌  -->
	<select id="findByExample" resultType="Brand" parameterType="Brand">
		SELECT
		bbs_brand.id,
		bbs_brand.`name`,
		bbs_brand.description,
		bbs_brand.img_url,
		bbs_brand.web_site,
		bbs_brand.sort,
		bbs_brand.is_display
		FROM
		bbs_brand
		<where>
			<if test="name!=null">and bbs_brand.`name` like "%"#{name}"%"</if>
			<if test="isDisplay!=null">and bbs_brand.is_display = #{isDisplay}</if>
		</where>
	</select>
	
	<select id="findById" resultType="Brand" >
		SELECT
		bbs_brand.id,
		bbs_brand.`name`,
		bbs_brand.description,
		bbs_brand.img_url,
		bbs_brand.web_site,
		bbs_brand.sort,
		bbs_brand.is_display
		FROM
		bbs_brand
		WHERE
		bbs_brand.id = #{id}
	</select>
	
	<!-- 根据id修改单个品牌对象 -->
	<select id="updateById" parameterType="Brand" resultType="Brand">
		UPDATE
		`babasport`.`bbs_brand`
		<set>
			<if test="name != null">
				`name` = #{name},
			</if>
			<if test="description != null">
				`description` = #{description},
			</if>
			<if test="imgUrl != null">
				`img_url` = #{imgUrl},
			</if>
			<if test="sort != null">
				`sort` = #{sort},
			</if>
			<if test="isDisplay != null">
				`is_display` = #{isDisplay}
			</if>
		</set>
		<where>
			id = #{id};
		</where>
	</select>
	
	<update id="deleteByIds">
		UPDATE `babasport`.`bbs_brand`
		SET 
		 `is_display` = '0'
		WHERE
		id in
		<foreach collection="ids" item="id"  separator="," open="(" close=")">
			#{id}
		</foreach>
	</update>
</mapper>